<div class="jumbotron mt-5">
  <h1 style="color: #1c1cca">Registro de usuario</h1>
  <form id="registerForm" form action="/api/sessions/register" method="POST" enctype="multipart/form-data">
    <div class="form-row mx-5">

      <div class="form-group col mt-2 mx-5">
        <label for="name"><i style="font-weight:bold">Nombre de usuario:</i></label>
        <input id="name" class="form-control" type="text" name="name" required>
      </div>
      <div class="form-group col mt-2 mx-5">
        <label for="email"><i style="font-weight:bold">Email:</i></label>
        <input id="email" class="form-control" type="email" name="email" required>
      </div>

    </div>

    <div class="form-row mx-5">

      <div class="form-group col mt-2 mx-5">
        <label for="password"><i style="font-weight:bold">Password:</i></label>
        <input id="password" class="form-control" type="password" name="password" required>
      </div>
      <div class="form-group col mt-2 mx-5">
        <label for="address"><i style="font-weight:bold">Dirección:</i></label>
        <input id="address" class="form-control" type="text" name="address" required>
      </div>

    </div>

    <div class="form-row mx-5">

      <div class="form-group col-2 mt-5 mx-5">
        <label for="age"><i style="font-weight:bold">Edad:</i></label>
        <input id="age" class="form-control" type="number" name="age" required>
      </div>
      <div class="form-group col-3 mt-5 mx-5">
        <label for="phone"><i style="font-weight:bold">Número de teléfono:</i></label>
        <input id="phone" class="form-control" type="tel" name="phone" required>
      </div>

    </div>

    <div class="form-row mx-5">

      <div class="form-group col mt-5 mx-5">
        <label for="avatar"><i style="font-weight:bold">Avatar:</i></label>
        <input id="avatar" class="form-control-file" type="file" name="avatar">
      </div>

    </div>


    <button style="border-radius: 3px;" class="border-0 btn btn-warning float-left mt-3 ml-4" id="gotoLogin">Ir
      al
      Login</button>

    <div class="d-flex justify-content-center">
      <input type="submit" value="Regístrarse" class="btn btn-info mt-3 center">
    </div>

  </form>
</div>


<script src="/js/register.js"></script>