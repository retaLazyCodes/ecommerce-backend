<div class="jumbotron">
  <h1 style="color: #1c1cca">Login de usuario</h1>
  <form id="loginForm">
    <div>
      <div class="form-group">
        <label for="email"><i style="font-weight:bold">Email:</i></label>
        <input id="email" class="form-control" type="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="password"><i style="font-weight:bold">Password:</i></label>
        <input id="password" class="form-control" type="password" name="password" required>
      </div>
    </div>
    <input type="submit" value="Ingresar" class="btn btn-info mt-3">

    <button style="border-radius: 3px;" class="border-0 btn btn-warning float-right mt-3"
      id="gotoRegister">Registrarse</button>
  </form>
</div>
<script src="js/login.js"></script>